<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_medical_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_medical_info"
        app:layout_constraintBottom_toTopOf="@+id/btn_resource_tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_resource_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_resource_tracker"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_incidents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_view_incidents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_view_incidents"
        app:layout_constraintBottom_toTopOf="@+id/btn_incident_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_incident_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_incident_report"
        app:layout_constraintBottom_toTopOf="@+id/btn_sos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sos"
        app:layout_constraintBottom_toTopOf="@+id/btn_safe_routing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_safe_routing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_safe_routing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
