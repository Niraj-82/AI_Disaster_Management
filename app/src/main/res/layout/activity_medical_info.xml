<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MedicalInfoActivity">

    <TextView
        android:id="@+id/tv_medical_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medical_info_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_medical_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medical_conditions"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_allergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_allergies"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_emergency_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_emergency_contact_name"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_emergency_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_emergency_contact_phone"
        android:inputType="phone"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_save_medical_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save_medical_info"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_first_aid_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_first_aid_guide"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>