<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_shelter_edit_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light"
    android:padding="16dp"
    tools:context=".AdminShelterEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shelter Name"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter shelter name"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter full address"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total capacity (e.g., 100)"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Occupancy"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterCurrentOccupancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Currently occupied (e.g., 50)"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Supplies (comma-separated)"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterSupplies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Water, Food, Blankets"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterContactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone or email"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 34.0522"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., -118.2437"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operational Status"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <Spinner
            android:id="@+id/spinnerShelterOperationalStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/etShelterAdditionalNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any other relevant info"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveShelter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Shelter"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnDeleteShelter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Shelter"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</ScrollView>
